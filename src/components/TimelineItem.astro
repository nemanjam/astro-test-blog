---
interface Props {
  index: number;
}
const { index } = Astro.props;
---

<div
  class="relative flex w-1/2 odd:justify-end even:self-end even:pl-6 odd:pr-6 odd:text-right after:transition-colors after:bg-white odd:after:shadow-[1px_-1px_1px_rgba(0,0,0,0.1)] even:after:shadow-[-1px_1px_1px_rgba(0,0,0,0.1)] after:top-[calc(50%-0.5rem)] even:after:right-auto even:after:left-4 after:absolute after:right-4 after:transform after:rotate-45 after:w-4 after:h-4 z-10"
>
  <div class="rounded transition-colors sm:max-w-[80%] shadow p-4 relative">
    <slot />
    <span
      class={`bg-white border-solid border-4 border-secondary rounded-full absolute w-4 h-4 top-[calc(50%-0.5em)] ${
        index % 2 === 0 ? '-right-8' : '-left-8'
      }`}></span>
  </div>
</div>
