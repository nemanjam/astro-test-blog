---
interface Props {
  index: number;
}
const { index } = Astro.props;
---

<div
  class="relative flex w-1/2 odd:justify-end even:self-end even:pl-6 odd:pr-6 odd:text-right after:transition-colors after:bg-white timeline-item dark:after:bg-darkgrey even:after:right-auto even:after:left-4 after:absolute after:right-4 after:transform after:rotate-45 after:w-4 after:h-4 z-10"
>
  <div
    class="rounded transition-colors dark:bg-darkgrey sm:max-w-[80%] shadow p-4 relative"
  >
    <slot />
    <span
      class={`bg-purple border-solid border-4 border-primary rounded-full absolute w-4 h-4 top-timelineCircle ${
        index % 2 === 0 ? '-right-8' : '-left-8'
      }`}></span>
  </div>
</div>
