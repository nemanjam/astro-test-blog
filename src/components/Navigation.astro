---
import NavigationItems from './NavigationItems.astro';
---

<nav
  class="fixed bg-purple transition-colors dark:bg-darkgrey text-text h-16 w-full z-50"
>
  <div class="flex h-full mx-auto justify-between items-center container">
    <a class="logo flex flex-row text-lg lg:text-2xl" href="/">
      <span class="letter inline-block top-0 relative">t</span>
      <span class="letter inline-block top-0 relative">h</span>
      <span class="letter inline-block top-0 relative">o</span>
      <span class="letter inline-block top-0 relative">m</span>
      <span class="letter inline-block top-0 relative">a</span>
      <span class="letter inline-block top-0 relative">s</span>
      <span>&nbsp;</span>
      <span class="letter inline-block top-0 relative">l</span>
      <span class="letter inline-block top-0 relative">e</span>
      <span class="letter inline-block top-0 relative">d</span>
      <span class="letter inline-block top-0 relative">o</span>
      <span class="letter inline-block top-0 relative">u</span>
      <span class="letter inline-block top-0 relative">x</span>
    </a>
    <ul class="hidden md:flex md:gap-6">
      <NavigationItems />
    </ul>
    <ul
      id="mobileMenu"
      class="md:hidden absolute flex flex-col w-full top-16 left-0 py-4 transition-transform items-center text-white bg-primary transform gap-4 translate-x-full"
    >
      <NavigationItems />
    </ul>
    <button
      aria-label="Toggle mobile menu"
      type="button"
      id="mobileMenuToggleBtn"
      class="md:hidden order-3 cursor-pointer relative w-5 h-6"
    >
      <span
        id="mobileMenuToggleBtnFirstline"
        class="transform transition-transform duration-300 absolute h-1 w-full bg-primary rounded-lg left-0 rotate-0 top-1"
      ></span>
      <span
        id="mobileMenuToggleBtnSecondline"
        class="absolute transition-opacity duration-300 h-1 w-full bg-primary rounded-lg left-0 top-3 opacity-100"
      ></span>
      <span
        id="mobileMenuToggleBtnThirdline"
        class="transform transition-transform duration-300 absolute h-1 w-full bg-primary rounded-lg left-0 rotate-0 top-5"
      ></span>
    </button>

